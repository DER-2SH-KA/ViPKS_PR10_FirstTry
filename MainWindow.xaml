<Window x:Class="ViPKS_PR10_FirstTry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViPKS_PR10_FirstTry"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <TabControl TabStripPlacement="Left" Background="White" BorderThickness="0,0,1,0">
            <!-- Стилизация вкладок для красоты -->
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="14" Padding="10,15" Width="200"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- 1. Управление товарами и материалами -->
            <TabItem Header="Товары и материалы">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Список -->
                        <ColumnDefinition Width="300" />
                        <!-- Форма CRUD -->
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Column="0" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Справочник материалов" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid Grid.Row="1" x:Name="MaterialsGrid" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Наименование" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="Ед. изм." Binding="{Binding UnitOfMeasurement.Title}" Width="100"/>
                                <DataGridTextColumn Header="Мин. остаток" Binding="{Binding MinRemains}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBlock Grid.Row="2" Text="Справочник готовой продукции (Артикулы)" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid Grid.Row="3" x:Name="ProductsGrid" AutoGenerateColumns="False" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Артикул" Binding="{Binding Articul}" Width="100"/>
                                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*"/>
                                <DataGridTextColumn Header="Спецификация" Binding="{Binding Specification.Title}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <Border Grid.Column="1" Background="#EFEFEF" CornerRadius="5" Padding="15">
                        <StackPanel x:Name="MaterialEditForm" Visibility="Collapsed">
                            <TextBlock Text="Редактирование материала" FontWeight="Bold" Margin="0,0,0,15"/>

                            <TextBlock Text="Наименование:"/>
                            <TextBox x:Name="TxtMaterialTitle" Margin="0,5,0,10"/>

                            <TextBlock Text="Единица измерения:"/>
                            <ComboBox x:Name="ComboBoxMaterialUnits" DisplayMemberPath="Title" Margin="0,5,0,10"/>

                            <TextBlock Text="Мин. остаток:"/>
                            <TextBox x:Name="TxtMatMinRemains" Margin="0,5,0,10"/>

                            <Button x:Name="btnSaveMaterial" Content="Сохранить" Margin="0,10,0,0" Height="30" Background="#2196F3" Foreground="White"/>
                            <Button x:Name="btnCancelEditingMaterial" Content="Отмена" Margin="0,5,0,0" Background="Transparent" BorderBrush="Gray"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="#EFEFEF" CornerRadius="5" Padding="15">
                        <StackPanel x:Name="ProductEditForm" Visibility="Collapsed">
                            <TextBlock Text="Редактирование продукта" FontWeight="Bold" Margin="0,0,0,15"/>

                            <TextBlock Text="Наименование:"/>
                            <TextBox x:Name="TxtProdTitle" Margin="0,5,0,10"/>

                            <TextBlock Text="Описание:"/>
                            <TextBox x:Name="TxtProdDescription" Margin="0,5,0,10"/>

                            <TextBlock Text="Спецификация:"/>
                            <ComboBox x:Name="TxtProdSpecification" DisplayMemberPath="Title" Margin="0,5,0,10"/>

                            <Button x:Name="btnSaveProduct" Content="Сохранить" Margin="0,10,0,0" Height="30" Background="#2196F3" Foreground="White"/>
                            <Button x:Name="btnCancelEditingProduct" Content="Отмена" Margin="0,5,0,0" Background="Transparent" BorderBrush="Gray"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- 2. Учёт поставок и склада -->
            <TabItem Header="Поставки и Склад">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <DockPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock DockPanel.Dock="Top" Text="Приход материалов" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5">
                            <Button Content="Добавить поставку" Padding="10,5"/>
                        </StackPanel>
                        <DataGrid x:Name="PurchasesGrid" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Дата" Binding="{Binding Purchase.DateOfPurchase, StringFormat=d}" Width="Auto"/>
                                <DataGridTextColumn Header="Материал" Binding="{Binding Material.Title}" Width="*"/>
                                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="Auto"/>
                                <DataGridTextColumn Header="Сумма" Binding="{Binding Purchase.Amount}" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>

                    <DockPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock DockPanel.Dock="Top" Text="Остатки на складе" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <DataGrid x:Name="RemainsGrid" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Материал" Binding="{Binding Material.Title}" Width="*"/>
                                <DataGridTextColumn Header="Текущий остаток" Binding="{Binding Remains}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Grid>
            </TabItem>

            <!-- 3. Управление производственными заказами -->
            <TabItem Header="Производственные заказы">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Список -->
                        <ColumnDefinition Width="300" />
                        <!-- Форма CRUD -->
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="Создать новый заказ" Padding="15,5" Background="#007ACC" Foreground="White" BorderThickness="0" Width="Auto"/>
                            <Button Content="Рассчитать материалы" Margin="10,0" Padding="15,5" Width="Auto" />
                        </StackPanel>

                        <DataGrid Grid.Row="1" x:Name="OrdersGrid" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="Клиент" Binding="{Binding Client.LastName}" Width="150"/>
                                <DataGridTextColumn Header="Дата начала" Binding="{Binding DateOfBegin, StringFormat=d}" Width="100"/>
                                <DataGridTextColumn Header="Дата окончания" Binding="{Binding DateOfEnd, StringFormat=d}" Width="100"/>
                                <DataGridTemplateColumn Header="Статус" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <!-- Здесь можно привязать цвет к статусу через конвертер -->
                                            <Border Background="#E1F5FE" CornerRadius="4" Padding="5,2">
                                                <TextBlock Text="{Binding OrderStatus.Title}" HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBlock Grid.Row="2" Text="* Для просмотра состава заказа выберите строку" FontStyle="Italic" Foreground="Gray" Margin="0,5"/>
                    </Grid>

                    <Border Grid.Column="1" Background="#EFEFEF" CornerRadius="5" Padding="15">
                        <StackPanel x:Name="ProductionOrderEditForm" Visibility="Collapsed">
                            <TextBlock Text="Редактирование материала" FontWeight="Bold" Margin="0,0,0,15"/>

                            <TextBlock Text="Заказ:"/>
                            <ComboBox x:Name="ComboBoxProductionOrderOrder" DisplayMemberPath="Title" Margin="0,5,0,10"/>

                            <TextBlock Text="Клиент:"/>
                            <ComboBox x:Name="ComboBoxProductionOrderClient" DisplayMemberPath="Title" Margin="0,5,0,10"/>

                            <TextBlock Text="Количесвто:"/>
                            <TextBox x:Name="TxtProductionOrderQuantity" Margin="0,5,0,10"/>

                            <TextBlock Text="Дата начала:"/>
                            <TextBox x:Name="TxtProductionOrderDateOfBegin" Margin="0,5,0,10"/>

                            <TextBlock Text="Дата окончания:"/>
                            <TextBox x:Name="TxtProductionOrderDateOfEnd" Margin="0,5,0,10"/>

                            <Button x:Name="btnSaveProductionOrder" Content="Сохранить" Margin="0,10,0,0" Height="30" Background="#2196F3" Foreground="White"/>
                            <Button x:Name="btnCancelEditingProductionOrder" Content="Отмена" Margin="0,5,0,0" Background="Transparent" BorderBrush="Gray"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- 4. Учёт сотрудников и оборудования -->
            <TabItem Header="Персонал и Ресурсы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <TextBlock DockPanel.Dock="Top" Text="Сотрудники" />
                        <DataGrid x:Name="EmployeesGrid" DockPanel.Dock="Bottom" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ФИО" Binding="{Binding LastName}" Width="*"/>
                                <DataGridTextColumn Header="Должность" Binding="{Binding EmployeePosition.Title}" Width="150"/>
                                <DataGridTextColumn Header="Отдел" Binding="{Binding Department.Title}" Width="120"/>
                                <DataGridTextColumn Header="Ставка" Binding="{Binding SalaryRate}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>

                    <DockPanel Grid.Row="1">
                        <TextBlock DockPanel.Dock="Top" Text="Оборудование" />
                        <DataGrid x:Name="EquipmentGrid" DockPanel.Dock="Bottom"  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Инв. номер" Binding="{Binding InventoryNum}" Width="120"/>
                                <DataGridTextColumn Header="Наименование" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="Статус" Binding="{Binding EquipmentStatus.Title}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Расчёты">
                
            </TabItem>
        </TabControl>
    </Grid>
</Window>
